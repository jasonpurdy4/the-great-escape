# The Great Escape - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/the-great-escape

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET=your-secret-key-min-32-characters-long-random-string
JWT_EXPIRES_IN=7d

# ============================================================================
# BRAINTREE / PAYPAL - SANDBOX (Development & Testing)
# ============================================================================
BRAINTREE_SANDBOX_MERCHANT_ID=
BRAINTREE_SANDBOX_PUBLIC_KEY=
BRAINTREE_SANDBOX_PRIVATE_KEY=

PAYPAL_SANDBOX_CLIENT_ID=
PAYPAL_SANDBOX_CLIENT_SECRET=

# ============================================================================
# BRAINTREE / PAYPAL - PRODUCTION (Live Payments - After Approval)
# ============================================================================
BRAINTREE_PRODUCTION_MERCHANT_ID=
BRAINTREE_PRODUCTION_PUBLIC_KEY=
BRAINTREE_PRODUCTION_PRIVATE_KEY=

PAYPAL_PRODUCTION_CLIENT_ID=
PAYPAL_PRODUCTION_CLIENT_SECRET=

# ============================================================================
# PAYMENT ENVIRONMENT (Switch between sandbox and production)
# ============================================================================
# Values: "sandbox" or "production"
PAYMENT_ENVIRONMENT=sandbox

# ============================================================================
# FOOTBALL DATA API
# ============================================================================
FOOTBALL_API_TOKEN=your_football_data_api_token_here

# ============================================================================
# EMAIL SERVICE (Future)
# ============================================================================
SENDGRID_API_KEY=
EMAIL_FROM=noreply@the-great-escape.com

# ============================================================================
# APP SETTINGS
# ============================================================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ============================================================================
# SECURITY
# ============================================================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
